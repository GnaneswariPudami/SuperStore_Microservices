{
  "family": "Notification-Service-task",
  "taskRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/NotificationServiceTaskRole",
  "executionRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/NotificationServiceExecutionRole",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities":
  [
    "FARGATE"
  ],
  "containerDefinitions":
  [
    {
      "name": "NOTIFICATIONS_ECS_SERVICE_NAME-container",
      "image": "ECR_REPO_URI",
      "portMappings":
      [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SNS_TOPIC_ARN", "value": "Content-Server-Deployment-Notification-Topic" }
      ],
      "essential": true,
      "logConfiguration":
      {
        "logDriver": "awslogs",
        "options":
        {
          "awslogs-group": "AWS_LOG_GROUP_NAME",
          "awslogs-region": "AWS_LOGS_REGION",
          "awslogs-stream-prefix": "AWS_LOG_STREAM_PREFIX"
        }
      }
    }
  ]
}